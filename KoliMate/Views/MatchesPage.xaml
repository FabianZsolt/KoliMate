<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoliMate.Views.MatchesPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Matches Page" FontSize="24" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Users}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="#DDD" CornerRadius="8">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="{Binding PhotoPath}" WidthRequest="64" HeightRequest="64" Aspect="AspectFill" />
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Age, StringFormat='Age: {0}'}" FontSize="12" />
                                <Label Text="{Binding Description}" FontSize="12" LineBreakMode="TailTruncation" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
