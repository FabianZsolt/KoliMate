<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="Root" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoliMate.Views.MatchesPage"
             Title="Matches"
             BackgroundColor="#FAFAFA">

    <CollectionView x:Name="MatchesCollectionView" 
                    ItemsSource="{Binding Matches}" 
                    SelectionMode="Single"
                    Margin="10">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="8" 
                       Padding="12" 
                       BackgroundColor="White" 
                       CornerRadius="12" 
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.OpenMatchCommand}" 
                                              CommandParameter="{Binding .}" 
                                              NumberOfTapsRequired="1" />
                    </Frame.GestureRecognizers>

                    <HorizontalStackLayout Spacing="12">

                        <!-- Profilkép -->
                        <Frame WidthRequest="80" 
                               HeightRequest="80" 
                               CornerRadius="40" 
                               Padding="0" 
                               BackgroundColor="#DDD" 
                               HasShadow="False">
                            <Image Source="{Binding PhotoPath}" 
                                   Aspect="AspectFill"/>
                        </Frame>

                        <!-- Név és leírás -->
                        <VerticalStackLayout VerticalOptions="Center" Spacing="4" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Name}" 
                                   FontAttributes="Bold" 
                                   FontSize="18"
                                   TextColor="#333333"
                                   LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding Description}" 
                                   FontSize="14"
                                   TextColor="#666666"
                                   LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>
