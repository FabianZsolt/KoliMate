<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="Root" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoliMate.Views.MatchesPage"
             Title="Matches"
             BackgroundColor="#1d294d">

    <CollectionView x:Name="MatchesCollectionView" ItemsSource="{Binding Matches}" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BackgroundColor="#fcaf17" CornerRadius="15" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.OpenMatchCommand}" CommandParameter="{Binding .}" NumberOfTapsRequired="1" />
                    </Frame.GestureRecognizers>
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="{Binding PhotoPath}"
                               WidthRequest="80"
                               HeightRequest="80"
                               Aspect="AspectFill"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               BackgroundColor="White" />
                        <StackLayout VerticalOptions="Center">
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#1d294d" />
                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="#1d294d" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
