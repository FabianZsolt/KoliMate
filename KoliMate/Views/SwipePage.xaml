<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KoliMate.ViewModels"
             x:Class="KoliMate.Views.SwipePage"
             Padding="0">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <SwipeView Grid.Row="0" Grid.Column="0"
                   VerticalOptions="Fill"
                   HorizontalOptions="Fill">
            <SwipeView.LeftItems>
                <SwipeItems Mode="Execute">
                    <SwipeItem Text="Like 👍"
                               BackgroundColor="LightGreen"
                               Command="{Binding LikeCommand}" />
                </SwipeItems>
            </SwipeView.LeftItems>

            <SwipeView.RightItems>
                <SwipeItems Mode="Execute">
                    <SwipeItem Text="Dislike 👎"
                               BackgroundColor="LightCoral"
                               Command="{Binding DislikeCommand}" />
                </SwipeItems>
            </SwipeView.RightItems>

            <Border StrokeShape="RoundRectangle 20,20,20,20" Padding="0"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    Margin="0"
                    Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding CurrentUser.PhotoPath}"
                           VerticalOptions="Fill"
                           HorizontalOptions="Fill"
                           Aspect="AspectFill" />

                    <StackLayout Grid.Row="1" Padding="15" BackgroundColor="White">
                        <Label Text="{Binding CurrentUser.Name}" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />
                        <Label Text="{Binding CurrentUser.Age}" HorizontalOptions="Center" />
                        <Label Text="{Binding CurrentUser.Description}" HorizontalOptions="Center" />
                    </StackLayout>
                </Grid>
            </Border>

        </SwipeView>
    </Grid>
</ContentPage>
