<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoliMate.Views.ProfilePage"
             Title="Profile">
  <ScrollView>
    <VerticalStackLayout Padding="20">
      <Image Source="{Binding CurrentUser.PhotoPath}" HeightRequest="200"/>
      <Entry Text="{Binding CurrentUser.Name}" Placeholder="Name"/>
      <Entry Text="{Binding CurrentUser.Age}" Placeholder="Age" Keyboard="Numeric"/>
      <Editor Text="{Binding CurrentUser.Description}" HeightRequest="120"/>
      <Button Text="Save" Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>

