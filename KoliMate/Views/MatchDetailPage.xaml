    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- ProfilkÃ©p -->
            <Frame Padding="0"
                   HeightRequest="180"
                   WidthRequest="180"
                   CornerRadius="90"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   BackgroundColor="#E0E0E0">
                <Image Source="{Binding User.PhotoPath}" 
                       Aspect="AspectFill" />
            </Frame>

            <!-- NÃ©v Ã©s leÃ­rÃ¡s -->
            <Label Text="{Binding User.Name}" 
                   FontAttributes="Bold" 
                   FontSize="26" 
                   HorizontalOptions="Center"/>
            <Label Text="{Binding User.Description}" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap" />

            <!-- Kapcsolati adatok -->
            <VerticalStackLayout Spacing="12">

                <!-- Telefon -->
                <Frame CornerRadius="12" BackgroundColor="White" Padding="12" HasShadow="True">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="TelefonszÃ¡m:" FontAttributes="Bold"/>
                        <Label Text="{Binding User.PhoneNumber}" 
                               TextColor="Blue" 
                               TextDecorations="Underline"
                               LineBreakMode="WordWrap">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenPhoneCommand}" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Button Text="ðŸ“‹" 
                                Command="{Binding CopyPhoneCommand}" 
                                BackgroundColor="#E0E0E0" 
                                TextColor="#333" 
                                CornerRadius="6"
                                WidthRequest="40"
                                HeightRequest="32"
                                HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Email -->
                <Frame CornerRadius="12" BackgroundColor="White" Padding="12" HasShadow="True">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email:" FontAttributes="Bold"/>
                        <Label Text="{Binding User.Email}" 
                               TextColor="Blue" 
                               TextDecorations="Underline"
                               LineBreakMode="WordWrap">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenEmailCommand}" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Button Text="ðŸ“‹" 
                                Command="{Binding CopyEmailCommand}" 
                                BackgroundColor="#E0E0E0" 
                                TextColor="#333" 
                                CornerRadius="6"
                                WidthRequest="40"
                                HeightRequest="32"
                                HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Facebook / Link -->
                <Frame CornerRadius="12" BackgroundColor="White" Padding="12" HasShadow="True">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Facebook profil:" FontAttributes="Bold"/>
                        <Label Text="{Binding User.FacebookProfile}" 
                               TextColor="Blue" 
                               TextDecorations="Underline"
                               LineBreakMode="WordWrap">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Button Text="ðŸ“‹" 
                                Command="{Binding CopyLinkCommand}" 
                                BackgroundColor="#E0E0E0" 
                                TextColor="#333" 
                                CornerRadius="6"
                                WidthRequest="40"
                                HeightRequest="32"
                                HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
